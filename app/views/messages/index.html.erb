<% if @message %>
  <div id="message-form" class="row">
    <div class="col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">
      <%= form_for @message, url: {action: "create"}, remote: true do |f| %>
        <%= f.text_area :content, class: "form-control", placeholder: "Bark someting..." %>
        <%= f.submit "Post", class: "btn btn-default pull-right" %>
      <% end %>
    </div>
  </div>
<% end %>

<% if @messages %>
  <div class="row">
    <div id="messages-list" class="col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">
      <ul class="list-group">
        <% @messages.each do |message| %>
          <li class="list-group-item"><%= message.content %></li>
        <% end %>
      </ul>
    </div>
  </div>
<% end %>
