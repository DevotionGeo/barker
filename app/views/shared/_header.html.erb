<nav id="top-nav" class="navbar navbar-default">
  <div class="container">
    <div class="navbar-header">
      <a class="navbar-brand" href="<%= user_signed_in? ? messages_path : '/' %>">
        <div>
          <%= image_tag "logo.png", id: "logo", alt: "Brand" %>
          <span>BARKER</span>
      </div>
      </a>
    </div>
    <ul class="nav navbar-nav pull-right">
      <% if user_signed_in? %>
        <li>
          <%= link_to "My account", edit_user_registration_path %>
          <%= link_to "Sign out", destroy_user_session_path, method:"delete", class: "sign-options" %>
