            <%= text_field_tag :search, nil, class: "form-control", placeholder: "search friends" %>
            <%= submit_tag "GO", class:"btn", id: "search-btn" %>
          <% end %>
        </li>
      <% elsif controller.controller_name == "sessions" %>
        <li>
          <%= link_to "Sign up", new_user_registration_path, class: "sign-options" %>
