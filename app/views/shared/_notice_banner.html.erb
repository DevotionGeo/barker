<div class="row">
  <div class="col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">
    <% if flash[:notice].present? || flash[:success].present? %>
      <p class="alert alert-success">
        <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only" style="font-size: 14px !important;"> Close</span></button>
        <%= flash[:notice] || flash[:success] %>
      </p>
    <% end %>
    <% if flash[:alert].present? || flash[:error].present? %>
      <p class="alert alert-danger">
        <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only" style="font-size: 14px !important;"> Close</span></button>
        <%= flash[:alert] || flash[:error] %>
      </p>
    <% end %>
  </div>
</div>
